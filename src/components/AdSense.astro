---
import { ADSENSE } from "@config";

export interface Props {
  slot?: string;
  format?: string;
  responsive?: boolean;
  className?: string;
}

const {
  slot = "auto",
  format = "auto",
  responsive = true,
  className = "",
} = Astro.props;
---

{
  ADSENSE.enabled && (
    <div class={`adsense-container ${className}`}>
      <ins
        class="adsbygoogle"
        style="display:block"
        data-ad-client={ADSENSE.publisherId}
        data-ad-slot={slot}
        data-ad-format={format}
        data-full-width-responsive={responsive.toString()}
      />
      <script is:inline>
        (window.adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>
  )
}

<style>
  .adsense-container {
    @apply my-8 w-full;
  }
</style>
